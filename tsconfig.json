{
	"compilerOptions": {
		"jsx": "react",
		"baseUrl": ".",
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES6",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"types": ["svelte", "node", "jest"],
		"strictNullChecks": true,
		"lib": ["DOM", "ES5", "ES6", "ES7"]
	},
	"include": ["src/*.ts", "src/*.tsx", "src/*.js", "src/*.jsx", "src/*.svelte"],
}
